{
  "manifest_version": 2,

  "name": "SAML Message Decoder",
  "description": "Collects and displays SAML messages",
  "version": "2.0.0",

  "browser_action": {
    "default_popup": "index.html"
  },

  "icons": {
    "16": "static/icon_16.png",
    "48": "static/icon_48.png",
    "128": "static/icon_128.png"
  },

  "permissions": [
    "<all_urls>",
    "webRequest",
    "contextMenus",
    "storage"
  ],

  "background": {
    "scripts": ["listener.js"]
  }
}
